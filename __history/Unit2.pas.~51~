unit Unit2;

interface

uses dglOpengl, Windows, openil, openilu, Messages, SysUtils;

Type
  SymbolTType = record
  x: real;
  y: real;
  width:real;
  height: real;
  ptSymbol:gluint;
  end;

  SymbolTexture = record
  width:real;
  height: real;
  mSymbol: glUint;
  end;
  Rectangle = record
  x:         real;
  y:         real;
  width:   real;
  height:  real;
  end;

  Textures = record
  gobject:array[1..500] of glUint;
  end;

  TAnimation = class
  protected
  FPictures:array of glUint;
  FFrameTime:integer;
  FCurrentTime:integer;
  FStoped:boolean;
  public
  Constructor Create(FrameTime:integer);

  Procedure   AddFrame(Picture:glUint);
  Procedure   Start();
  Procedure   Stop();
  Procedure   Update(dt:integer);
  Procedure   Draw();
end;

Var
  TSymbol : array[1..256] of SymbolTexture;
  Symbol_height: real;
  Symbol_width: real;
  pSymbol: array[1..256] of SymbolTType;
  Tex: Textures;
  mouse_x, mouse_y: integer;
  tclick: boolean;

